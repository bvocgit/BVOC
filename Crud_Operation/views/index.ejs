<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do List</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <div class="container">
    <h1>To-Do List</h1>

    <button id="dark-mode-toggle">Toggle Dark Mode</button>

    <div class="form-container">
      <form action="/tasks" method="POST">
        <div>
          <label for="task">New Task</label>
          <input type="text" id="task" name="task" placeholder="New task" required>
        </div>
        <div>
          <label for="comments">Add Comments</label>
          <textarea id="comments" name="comments" placeholder="Add comments"></textarea>
        </div>
        <div>
          <label for="priority">Priority</label>
          <select id="priority" name="priority">
            <option value="low">Low</option>
            <option value="medium">Medium</option>
            <option value="high">High</option>
          </select>
        </div>
        <div>
          <label for="due_date">Due Date</label>
          <input type="date" id="due_date" name="due_date">
        </div>
        <div>
          <label for="category">Category</label>
          <select id="category" name="category">
            <option value="work">Work</option>
            <option value="personal">Personal</option>
            <option value="urgent">Urgent</option>
          </select>
        </div>
        <button type="submit">Add</button>
      </form>
    </div>

co    <ul>
      <% todoLis=t.forEach(task=> { %>
        <li class"task-item <%= task.priority %>">
          <div class="task-ntent">
            <h2>
              <%= task.task %>
            </h2>
            <p>
              <%= task.comments %>
            </p>
            <p><strong>Due Date:</strong>
              <%= task.due_date %>
            </p>
            <p><strong>Category:</strong>
              <%= task.category %>
            </p>
          </div>
        </li>
        <% }) %>
    </ul>
  </div>

  <script>


    document.getElementById('dark-mode-toggle').addEventListener('click', function () {
      document.body.classList.toggle('dark-mode');
      document.querySelectorAll('input, textarea, select').forEach(el => el.classList.toggle('dark-mode'));
      document.querySelectorAll('.task-item').forEach(el => el.classList.toggle('dark-mode'));
      this.classList.toggle('dark-mode');
    });

  </script>
</body>

</html>