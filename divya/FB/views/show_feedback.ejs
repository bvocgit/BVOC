<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Feedback</title>

    <style>
        body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f0f4f8;
    margin: 20px;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 100vh;
}

/* Styling for fixed header */
header {
    background-color: #fff;
    padding: 15px 20px;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 20px;
}

nav ul li {
    display: inline;
}

nav ul li a {
    text-decoration: none;
    color: #4a90e2;
    font-weight: bold;
}

nav ul li a:hover {
    color: #0073e6;
}

/* Add some space below the header */
main {
    margin-top: 120px;
    display: flex;
    justify-content: center;
    padding: 20px;
}

/* Container for feedback list */
.feedback-container {
    background-color: white;
    padding: 40px;
    border-radius: 30px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 1000px;
    text-align: center;
}

/* Title for the feedback page */
.feedback-container h1 {
    font-size: 30px;
    color: #333;
    margin-bottom: 30px;
}

/* Styling for the feedback table */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

table th, table td {
    padding: 12px;
    border: 1px solid #ddd;
    text-align: center;
}

table th {
    background-color: #007bff;
    color: white;
    font-weight: bold;
}

table td {
    background-color: #f8f9fa;
}

table tr:hover {
    background-color: #f1f1f1;
}

/* Button styling */
button {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
    margin-top: 10px;
}

button:hover {
    background-color: #218838;
}

/* Pagination or action buttons (if any) */
.pagination {
    margin-top: 20px;
    display: flex;
    justify-content: center;
    gap: 10px;
}

.pagination a {
    padding: 10px 15px;
    text-decoration: none;
    background-color: #007bff;
    color: white;
    border-radius: 5px;
}

.pagination a:hover {
    background-color: #0056b3;
}

/* Responsiveness for smaller screens */
@media (max-width: 768px) {
    .feedback-container {
        padding: 20px;
    }

    table th, table td {
        padding: 8px;
        font-size: 14px;
    }

    .pagination a {
        padding: 8px 12px;
        font-size: 12px;
    }
}
    </style>
</head>
<body>
    <%- include('header') %>

    <h1> Feedbacks </h1>
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Feedback</th>
                <th>Category</th>
                <th>Confidential</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% feedbacks.forEach(feedback => { %>
                <tr>
                    <td><%= feedback.name %></td>
                    <td><%= feedback.email %></td>
                    <td><%= feedback.feedback %></td>
                    <td><%= feedback.category %></td>
                    <td><%= feedback.confidential ? 'Yes' : 'No' %></td>
                    <td>
                        <form action="/delete-feedback" method="POST" style="display:inline;">
                            <input type="hidden" name="id" value="<%= feedback._id %>">
                            <button type="submit">Delete</button>
                        </form>
                        <!-- <form action="/update-feedback" method="POST" style="display:inline;">
                            <input type="hidden" name="id" value="<%= feedback._id %>">
                            <input type="text" name="feedback" placeholder="New Feedback" required>
                            <button type="submit">Update</button>
                        </form> -->
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

</body>
</html>
