    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
            background-color: #f4f4f4;
            color: #333;
            scroll-behavior: smooth;
        }

        /* Hero Section */
        .hero {
            background: url('your-image.jpg') no-repeat center center/cover;
            height: 100vh;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 0 20px;
            background-color: #0a3d62; /* Professional dark blue */
        }

        .hero h1 {
            font-size: 4em;
            margin: 0;
        }

        .hero p {
            font-size: 1.5em;
            margin-top: 10px;
        }

        nav {
            position: fixed;
            width: 100%;
            top: 0;
            background: rgba(10, 61, 98, 0.9); /* Semi-transparent dark blue */
            padding: 10px 0;
            z-index: 1000;
            transition: background 0.3s ease;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            padding: 15px 20px;
            transition: color 0.3s ease;
        }

        nav a:hover {
            color: #ccc;
        }

        .container {
            width: 85%;
            margin: auto;
            overflow: hidden;
            padding-top: 40px;
        }

        section {
            margin-bottom: 60px;
            padding: 40px 20px;
            background: #fff;
            border-radius: 5px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        section h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #0a3d62;
            text-align: center;
            position: relative;
        }

        section h2::after {
            content: '';
            width: 50px;
            height: 3px;
            background: #0a3d62;
            display: block;
            margin: 10px auto;
        }

        .skills, .experience, .projects {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .skills div, .experience div, .projects div {
            padding: 20px;
            background: #f9f9f9;
            border-radius: 5px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .skills div:hover, .experience div:hover, .projects div:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .contact {
            text-align: center;
            background: #1e3799; /* Lighter professional blue */
            color: #fff;
            padding: 60px 20px;
            border-radius: 5px;
        }

        .contact a {
            display: inline-block;
            margin: 10px;
            padding: 15px 30px;
            background: #4a69bd; /* Mid-tone blue */
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .contact a:hover {
            background: #6a89cc; /* Lighter blue */
        }

        footer {
            background: #0a3d62;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 20px;
        }

        footer p {
            margin: 0;
        }
    </style>
</head>
